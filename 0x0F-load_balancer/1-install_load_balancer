#!/usr/bin/env bash
# Installing and configuring HAProxy
# Develop a script for setting up and adjusting HAProxy on the lb-01 server.
# Set up HAProxy to direct traffic to web-01 and web-02 servers.
# Distribute incoming requests evenly using a round-robin algorithm.
# Ensure HAProxy can be controlled through an init script.
# Install and set up HAProxy on the lb-01 server.
# Update package index and install HAProxy
sudo apt-get -y update
sudo apt-get -y install haproxy

# Edit configuration file
server_config=\
"
frontend andy-frontend
    bind *:80
    mode http
    default_backend andy-backend

backend andy-backend
    balance roundrobin
    server 510198-web-01 54.157.180.70:80 check
    server 510198-web-02 54.175.161.169:80 check
"
echo "$server_config" | sudo tee -a /etc/haproxy/haproxy.cfg

# Enable HAProxy service to be managed via init script
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

# Restart HAProxy service
sudo service haproxy restart

